---
const { date } = Astro.props;

function formatDate(dateStr: string) {
  const dateObj = new Date(dateStr);
  return dateObj.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
